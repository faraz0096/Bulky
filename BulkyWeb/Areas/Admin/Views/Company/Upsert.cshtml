@model Company

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create")Company</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Id" hidden />
			<div class="row">
				<div class="col-12">
					<div class="border p-3">
						@* <div asp-validation-summary="All"></div> *@
						<div class="form-floating py-2 col-12">
							<input asp-for="Name" class="form-control border-0 shadow" />
							<label class="ms-2" asp-for="Name"></label>
							<span class="text-danger" asp-validation-for="Name"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="PhoneNumber" class="form-control border-0 shadow" />
							<label class="ms-2" asp-for="PhoneNumber"></label>
							<span class="text-danger" asp-validation-for="PhoneNumber"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="StreetAddress" class="form-control border-0 shadow" />
							<label class="ms-2" asp-for="StreetAddress"></label>
							<span class="text-danger" asp-validation-for="StreetAddress"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="City" class="form-control border-0 shadow" />
							<label class="ms-2" asp-for="City"></label>
							<span class="text-danger" asp-validation-for="City"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="State" class="form-control border-0 shadow" />
							<label class="ms-2" asp-for="State"></label>
							<span class="text-danger" asp-validation-for="State"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="PostalCode" class="form-control border-0 shadow" />
							<label class="ms-2" asp-for="PostalCode"></label>
							<span class="text-danger" asp-validation-for="PostalCode"></span>
						</div>
					</div>
				</div>
			</div>


			<div class="row mt-3">
				<div class="col-6 col-md-3">
					@if (Model.Id != 0)
					{
						<button type="submit" class="btn btn-primary form-control">Update</button>
					}
					else
					{
						<button type="submit" class="btn btn-primary form-control">Create</button>
					}
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">
						Back to List
					</a>
				</div>
			</div>
		</form>
	</div>
</div>


	@{
		<partial name="_ValidationScriptsPartial" />
	}
}